[common-variables]
$cflags = -c

[default]
help            = Compile with GNU gfortran
template        = template-test

[template-test]
compiler        = Gnu
mpi             = False
cflags          = $cflags
mod_dir         = ./mod/
obj_dir         = ./obj/
build_dir       = ./
src             = ./
colors          = True
quiet           = False
jobs            = 1
inc             = .h .H
target          = cumbersome.f90
output          = test1
log             = True
cflags_heritage = True

[rule-finalize]
help    = Rule for preparing the next test
quiet   = False
rule-1  = rm -rf ../test2/precompiled
rule-2  = mkdir -p ../test2/precompiled/mod
rule-3  = mkdir -p ../test2/precompiled/obj
rule-4  = rm -rf ../test3/lib
rule-5  = mkdir -p ../test3/lib
rule-6  = cp ./mod/nested_1.mod ../test2/precompiled/mod/
rule-7  = cp ./obj/first_dep.o  ../test2/precompiled/obj/
rule-8  = cp ./mod/nested_1.mod ../test3/lib
rule-9  = ar -rcs libfirst_dep.a ./obj/first_dep.o
rule-10 = ranlib libfirst_dep.a
rule-11 = mv libfirst_dep.a ../test3/lib
